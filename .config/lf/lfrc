# Lf configuration file

set icons
set cleaner "~/.config/lf/cleaner"
set previewer "~/.config/lf/scope"

cmd changeFileName ${{
  echo "New filename:"
  read NAME
  mv $f "$(pwd)/$NAME"
}}

cmd delete ${{
	clear; tput cup $(($(tput lines)/3)); tput bold
	set -f
	printf "%s\n\t" "$fx"
	printf "delete?[y/N]"
	read ans
	[ $ans = "y" ] && rm -rf -- "$fx"
  notify-send "ðŸ“‚ File(s) deleted"
}}

cmd mkdir $mkdir -p "$(echo $* | tr ' ' '\ ')"

cmd open ${{
  case $(xdg-mime query filetype $f) in
    text/*|application/json) $EDITOR $f;;
    *) xdg-open "$f" & disown;;
  esac
}}

map D delete
map . set hidden!
map A rename
map I push A<c-a>
map R reload
map M push :mkdir<space>
map <enter> shell
map Y $printf "%s" "$fx" | xclip -selection clipboard
