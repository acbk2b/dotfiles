# Lf configuration file

cmd changeFileName ${{
  echo "New filename:"
  read NAME
  mv $f "$(pwd)/$NAME"
}}

cmd delete ${{
	printf "%s\n\t" "$fx"
	printf "delete?[y/N]"
	read ans
	[ $ans = "y" ] && rm -rf -- $fx
}}

cmd open ${{
  case $(xdg-mime query filetype $f) in
    text/*|application/json) $EDITOR $f;;
    *) xdg-open $f & disown;;
  esac
}}

map D delete
map . set hidden!
map C changeFileName
map R reload
