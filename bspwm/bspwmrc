#! /bin/sh

sxhkd &

bspc monitor HDMI-1 -d I II III IV V VI VII VIII IX X
bspc monitor DP-1-5 -d I II III IV V VI VII VIII IX X

# Border around windows
bspc config border_width         0

# Gaps between windows
bspc config window_gap          12

# Ratio for slitting windows
bspc config split_ratio          0.5
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config focus_follows_pointer true
bspc config pointer_follows_focus true

# Rule "dropdown" st terminal 
bspc rule -a st-dropdown state=floating
bspc rule -a Pavucontrol state=floating

# Set background with feh
feh --bg-fill ~/E/AlexBecker/Pictures/Wallpapers/whiterun.jpg &

# Start picom for transparency
picom &

# polybar launch script; kills all open polybars and starts main bar
zsh ~/.config/polybar/launch.sh

# Enable tapping on trackpad
xinput set-prop 12 319 1

numlockx &
